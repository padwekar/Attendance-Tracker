<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3D5AFE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/id"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class ID"
            android:id="@+id/edittext_classId"
            android:textColor="#000"
            android:textColorHint="#fff"
            android:textSize="25sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/name"
        >
    <EditText
        android:id="@+id/edittext_className"
        android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Class Name"
            android:textColor="#000"
            android:textColorHint="#fff"
            android:textSize="25sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/section"
        >
        <EditText
            android:id="@+id/edittext_sectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section Name"
            android:textColor="#000"
            android:textColorHint="#fff"
            android:textSize="25sp" />
</com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/department"
        >
        <EditText
            android:id="@+id/edittext_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            android:textColor="#000"
            android:textColorHint="#fff"
            android:textSize="25sp" />
</com.github.florent37.materialtextfield.MaterialTextField>

<com.github.florent37.materialtextfield.MaterialTextField
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:mtf_image="@drawable/total"
    >
<EditText
    android:id="@+id/edittext_classStrength"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Class Strength"
    android:textColor="#000"
    android:textColorHint="#fff"
    android:textSize="25sp" />
</com.github.florent37.materialtextfield.MaterialTextField>

</LinearLayout>
