<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundclass"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textview_Class"
        android:text="CREATE CLASS"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/btn_background_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_height="1dp"
        android:layout_width="1dp"
        android:visibility="gone"
        app:mtf_image="@drawable/id">

    <EditText android:layout_height="1dp"
        android:layout_width="1dp"
        android:textSize="25sp"
        android:textColorHint="#76FF03"
        android:textColor="#000"
        android:id="@+id/edittext_classId"
        android:hint="Class ID"/>

</com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/name"
        >
    <EditText
        android:id="@+id/edittext_className"
        android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Class Name"
            android:textColor="#000"
        android:inputType="textCapSentences"
            android:textColorHint="#76FF03"
            android:textSize="25sp"
        android:imeOptions="actionDone"
        android:singleLine="true"/>
    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/tvsec"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/section"
        >
        <EditText
            android:inputType="textCapSentences"
            android:id="@+id/edittext_sectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section Name"
            android:textColor="#000"
            android:textColorHint="#76FF03"
            android:textSize="25sp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
</com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/tvdept"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/department"
        >
        <EditText
            android:inputType="textCapSentences"
            android:id="@+id/edittext_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            android:textColor="#000"
            android:textColorHint="#76FF03"
            android:textSize="25sp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
</com.github.florent37.materialtextfield.MaterialTextField>

<com.github.florent37.materialtextfield.MaterialTextField
    android:id="@+id/tvtotal"

    android:layout_width="match_parent"
android:layout_height="wrap_content"
app:mtf_image="@drawable/total"
    >
<EditText
    android:inputType="number"
    android:id="@+id/edittext_classStrength"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Class Strength"
    android:textColor="#000"
    android:textColorHint="#76FF03"
    android:textSize="25sp"
    android:imeOptions="actionDone"
    android:singleLine="true"/>
</com.github.florent37.materialtextfield.MaterialTextField>
</LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/snackbarPosition">
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
