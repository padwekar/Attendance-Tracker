<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.savi.atun.Activities.MonthActivity">

    <FrameLayout
        android:id="@+id/framelayout_class_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
<RelativeLayout
    android:layout_below="@id/framelayout_class_details"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="SELECT MONTH"
        android:textSize="20dp"
        android:gravity="center"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/textview_select_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgview_seprator"
        android:layout_below="@id/textview_select_suggestion"
        android:background="@drawable/divider2"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/imgview_seprator"
    android:id="@+id/recyclerView_monthlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>
</RelativeLayout>
</RelativeLayout>
