<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/relayout"
    android:background="@drawable/rounded_corner"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"
>



    <TextView
        android:id="@+id/classViewName"
        android:text="B.E I.T"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/classStrength"
        android:text="60"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/tvSectionTitle"
        android:text="Section :"
        android:layout_below="@id/classViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/tvSection"
        android:text="A"
        android:layout_toRightOf="@id/tvSectionTitle"
        android:layout_below="@id/classViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Computer"
        android:layout_below="@id/classStrength"
        android:layout_alignParentRight="true"
        android:id="@+id/tvDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDepartmentTitle"
        android:layout_below="@id/classViewName"
     android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="Department  :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>