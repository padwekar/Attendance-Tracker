<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:text="SELECT A SLOT TO SAVE"
    android:textSize="15dp"
    android:id="@+id/textview_slotSelection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
   <LinearLayout
       android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/textview_slotSelection"
       android:id="@+id/linearLayout1"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="30dp">

        <RadioButton
        android:layout_weight="1"
        android:id="@+id/radiobtn1"
        android:text="SLOT ONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView

            android:text="EMPTY"
            android:id="@+id/textviewe_slot1Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

   </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <RadioButton
            android:layout_weight="1"
            android:layout_below="@+id/linearLayout1"
            android:id="@+id/radiobtn2"
            android:text="SLOT TWO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView

        android:text="EMPTY"
        android:id="@+id/textviewe_slot2Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/radiobtn3"
            android:text="SLOT THREE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView

        android:text="EMPTY"
        android:id="@+id/textviewe_slot3Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/linearLayout3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:text="CANCEL"
            android:background="#10FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_save"
            android:background="#10FFFFFF"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>