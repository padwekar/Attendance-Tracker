<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    card_view:cardBackgroundColor="#1018FFFF"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/relativelayout"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#FFF176"
        android:id="@+id/classViewName"
        android:text="CLASS NAME"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#00E676"
        android:id="@+id/tvSectionTitle"
        android:text="Section :"
        android:layout_below="@id/classViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/classViewName"
        android:id="@+id/tvSection"
        android:textColor="#42A5F5"
        android:layout_toRightOf="@+id/tvSectionTitle"
        android:text="SECTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="#00E676"
        android:id="@+id/tvDepartmentTitle"
        android:layout_below="@id/tvSectionTitle"
        android:text="Department  :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvSection"
        android:id="@+id/tvDepartment"
        android:layout_toRightOf="@id/tvDepartmentTitle"
        android:text="DEPARTMENT"
        android:textColor="#42A5F5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/classStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Strength"
        android:id="@+id/tvStrengthTitile"
        android:textColor="#00E676"

        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/classStrengthMain"
        android:layout_below="@id/classStrength"
        android:text="60"
        android:textSize="60dp"
        android:textColor="#42A5F5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<RelativeLayout
    android:layout_below="@id/relativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:visibility="invisible"
        android:id="@+id/btn_showAttendance"
        android:textColor="#fff"
        android:text="Show Attendance"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_background_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
android:layout_below="@id/relativelayout"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <Button
             android:id="@+id/btn_takeAttendance"
             android:layout_weight="2"
             android:drawablePadding="-30dp"
             android:textColor="#fff"
             android:text="Attendance"
             android:layout_marginRight="@dimen/activity_horizontal_margin"
             android:background="@drawable/btn_background_custom"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_delete_attendance"
            android:layout_weight="2"
            android:drawablePadding="-10dp"
            android:text="Delete"
            android:background="@drawable/btn_background_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>