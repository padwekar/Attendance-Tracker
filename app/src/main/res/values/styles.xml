<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#FFFFFF  </item>
        <item name="colorPrimary">@color/cardview_dark_background
        </item>

    </style>
    <style name="ViewClasTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorPrimary">#90CAF9</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ACTION BAR STYLES -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/backgroundclass2</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/backgroundclass2</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="NightTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ViewClassActionBar</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ViewClassActionBar</item>
    </style>
    <!-- ACTION BAR STYLES -->
    <style name="ViewClassActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/viewclasswallpaper2</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/viewclasswallpaper2</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
